@model test2.Data.Order﻿
@{
	Layout = "Layout_Patient";

	var status = Model.Option.Status;
}

<div class="max-w-3xl mt-16 mx-auto bg-white p-6 rounded-lg shadow-md space-y-6">
	<!-- Header -->
	<div class="flex items-center justify-between">
		<h2 class="text-xl font-semibold">Appointment Detail</h2>
		<div class="flex items-center space-x-2">
			<span class="px-2 py-1 text-xs bg-gray-200 rounded">@status</span>
			@if (status == "Paid" || status == "Unpaid")
			{
				<button onclick="cancelAppointment()" class="px-2 py-1 text-xs bg-red-500 rounded">Cancel</button>
			}

		</div>
	</div>
	<h3 class="text-lg font-semibold">Doctor Detail</h3>
	<section class="bg-white p-4 rounded-md border-1 border-gray-300  space-y-4 mt-2">

		<div class="flex items-start space-x-4">
			<img src="@Model.Option.DidNavigation.DoctorImg" alt="Profile" class="w-12 h-12 rounded-full">
			<div class="flex-1 space-y-2">
				<h4 class="font-semibold text-lg">@Model.Option.DidNavigation.Name</h4>
				<div class="text-gray-500 flex items-center space-x-2">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">

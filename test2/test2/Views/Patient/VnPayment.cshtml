@{
    Layout = "_Layout";
    ViewData["Title"] = "Payment";
}

<div class="bg-gray-100 pt-10 mt-10">
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-3xl font-bold text-blue-600 mb-6">Payment for Your Appointment</h1>

        <div class="mb-4">
            <h2 class="text-2xl font-semibold text-gray-800">Total Amount:</h2>
            <p class="text-xl font-bold text-gray-900">1,000,000 VND</p>
        </div>

        <div class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-800">Payment Options</h2>
            <div class="mt-4">
                <button class="w-full py-2 px-4 mb-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-300">Pay with Credit Card</button>
                <button class="w-full py-2 px-4 mb-2 text-white bg-green-600 rounded-lg hover:bg-green-700 transition duration-300">Pay with Mobile Wallet</button>
            </div>
        </div>

        <div class="flex items-center justify-between mb-6">
            <div class="border border-gray-300 rounded-lg p-4 flex-grow mr-2">
                <h2 class="text-lg font-semibold text-gray-800">Scan QR Code for Bank Payment</h2>
                <img src="https://acb.com.vn/_next/image?url=%2Fmedia%2FxIfI22FUMRTxy6QbxrsuktqT73Sw7PMieSaQzXe4.jpg&w=3840&q=75" width="200px" alt="QR Code" class="mx-auto my-4" />
                <p class="text-center text-gray-600">Use your bank app to scan this QR code.</p>
            </div>
            <div class="w-1/4">
                <h2 class="text-lg font-semibold text-gray-800">Bank Details</h2>
                <p class="text-gray-700">Bank Name: ABC Bank</p>
                <p class="text-gray-700">Account Number: 123456789</p>
                <p class="text-gray-700">Account Name: John Doe</p>
            </div>
        </div>

        <div class="flex justify-between mt-6">
            <button class="py-2 px-4 text-white bg-red-600 rounded-lg hover:bg-red-700 transition duration-300">Cancel</button>
            <button class="py-2 px-4 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-300">Confirm Payment</button>
        </div>
    </div>
</div>

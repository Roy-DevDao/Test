@model List<test2.Models.DoctorModel.BaseViewModel>
@{
    Layout = "~/Views/Shared/Layout_Doctor.cshtml";
}

<!-- Render dữ liệu cuộc hẹn -->
<div class="container mx-auto mt-10 pt-10 bg-white rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-blue-500 mb-4">Appointment Details</h2>
    <div class="flex items-center mb-2">
        <img class="w-24 h-24 rounded mb-3"
             src="@(!string.IsNullOrEmpty(Model.First().appointmentDetail.PatientImage)
                ? Model.First().appointmentDetail.PatientImage
                : "https://cellphones.com.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg")"
             alt="Patient avatar" />

        <div class="bg-gray-100 p-4 ml-3 rounded-lg">
            <h3 class="font-semibold text-gray-700">Patient Information</h3>
            <p><strong>Name:</strong> @(Model.First().appointmentDetail.PatientName ?? "Unknown")</p>
            <p><strong>Phone:</strong> @(Model.First().appointmentDetail.PatientPhone ?? "Unknown")</p>
        </div>
    </div>


    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Patient Information -->
        <div class="bg-gray-100 p-4 rounded-lg">
            <h3 class="font-semibold text-gray-700">Specialty : </h3>
            <p><strong>@(Model.First().appointmentDetail.Specialty ?? "Specialty not available")</strong></p>

            <h3 class="font-semibold text-gray-700 mt-2">Price : </h3>
            <p><strong>@(Model.First().appointmentDetail.Price?.ToString("C") ?? "Price not available")</strong></p>
        </div>

        <!-- Appointment Information -->
        <div class="bg-gray-100 p-4 rounded-lg">
            <h3 class="font-semibold text-gray-700">Appointment Information</h3>
            <p><strong>Date:</strong> @Model.First().appointmentDetail.DateOrder?.ToString("MM/dd/yyyy")</p>
            <p><strong>Time:</strong> @Model.First().appointmentDetail.DateOrder?.ToString("hh:mm tt")</p>
        </div>


        <!-- Notes -->
        <div class="bg-gray-100 p-4 rounded-lg col-span-1 md:col-span-2">
            <h3 class="font-semibold text-gray-700">Symptom</h3>
            <p>@(string.IsNullOrEmpty(Model.First().appointmentDetail.Symptom) ? "No additional notes." : Model.First().appointmentDetail.Symptom)</p>
        </div>
    </div>

    <div class="mt-6 flex justify-end">
        <a asp-action="ViewAppointment"
           class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 font-semibold shadow">
            Back to Appointments
        </a>
    </div>
</div>
    }
@{
    Layout = "Layout_new";
    ViewData["Title"] = "Contact";
}

<style>
    .mt-100 {
        margin-top: 50px;
    }
</style>

<div class="breadcrumb-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-12 col-12">
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Send Contact</li>
                    </ol>
                </nav>
                <h2 class="breadcrumb-title">Send Contact</h2>
            </div>
        </div>
    </div>
</div>

<section class="mt-70 mt-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="card features feature-primary text-center border-0">
                    <div class="icon text-center rounded-md mx-auto">
                        <i class="uil uil-phone h3 mb-0"></i>
                    </div>
                    <div class="card-body p-0 mt-3">
                        <h5>Hotline</h5>
                        <a href="tel:0987367341" class="link">0987367341</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mt-4 mt-sm-0 pt-2 pt-sm-0">
                <div class="card features feature-primary text-center border-0">
                    <div class="icon text-center rounded-md mx-auto">
                        <i class="uil uil-envelope h3 mb-0"></i>
                    </div>
                    <div class="card-body p-0 mt-3">
                        <h5>Email</h5>
                        <a href="mailto:baook01234@gmail.com" class="link">baook01234@gmail.com</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mt-4 mt-lg-0 pt-2 pt-lg-0">
                <div class="card features feature-primary text-center border-0">
                    <div class="icon text-center rounded-md mx-auto">
                        <i class="uil uil-map-marker h3 mb-0"></i>
                    </div>
                    <div class="card-body p-0 mt-3">
                        <h5>Địa chỉ</h5>
                        <a href="https://goo.gl/maps/G8Dyw5XUAiFcHrss5" class="link">Đà Nẵng, Việt Nam</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-100 mt-60">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-6 mt-4 pt-2 mt-sm-0 pt-sm-0">
                <div class="card map border-0">
                    <div class="card-body p-0">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3511.2067926164627!2d108.25831637465457!3d15.968891042117207!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142116949840599%3A0x365b35580f52e8d5!2zxJDhuqFpIGjhu41jIEZQVCDEkMOgIE7hurVuZw!5e1!3m2!1svi!2s!4v1729786870507!5m2!1svi!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 col-md-6 mt-4 pt-2 mt-sm-0 pt-sm-0">
                <div class="custom-form rounded shadow p-4">
                    <h5 class="mb-4">Give your information</h5>

                    <!-- Thông báo thành công hoặc thất bại -->
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div id="alert-success"  class="alert alert-success">@ViewBag.Message</div>
                    }
                    else if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div id="alert-failure" class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }

                    <form method="post" asp-action="Contact">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Your Name <span class="text-danger">*</span></label>
                                    <input name="Name" type="text" class="form-control border rounded" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email <span class="text-danger">*</span></label>
                                    <input name="Email" type="email" class="form-control border rounded" required>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">Title</label>
                                    <input name="Title" type="text" class="form-control border rounded" required>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">Description <span class="text-danger">*</span></label>
                                    <textarea name="Description" rows="4" class="form-control border rounded" required></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
        window.onload = function() {
        var successAlert = document.getElementById("alert-success");
        var failureAlert = document.getElementById("alert-failure");

        if (successAlert) {
            setTimeout(function() {
                successAlert.style.display = "none";
            }, 2000); // 2 giây
        }
        if (failureAlert) {
            setTimeout(function() {
                failureAlert.style.display = "none";
            }, 2000); // 2 giây
        }
    };
</script>